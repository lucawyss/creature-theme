<div id="lang">
	<ul id="picker" class="langswitcher parts z-depth-2">
	{% set langobj = grav['language'] %}
	
	{% for key, language in langswitcher.languages %}
	
	    {% if key == langswitcher.current %}
	        {% set lang_url = page.url %}
	        {% set active_class = 'active' %}
	    {% else %}
	        {% set lang_url = base_url_simple ~ langobj.getLanguageURLPrefix(key)~langswitcher.page_route ?: '/' %}
	        {% set active_class = '' %}
	    {% endif %}
	
	    <li><a href="{{ lang_url }}" class="{{ active_class }}">{{  language.nativeName|capitalize }}</a></li>
	
	{% endfor %}
	</ul>
	<div class="toggle parts  z-depth-2">
		<span class="current">{{ langswitcher.languages[langswitcher.current].nativeName|capitalize }}</span><i class="material-icons right">expand_less</i>
	</div>
</div>
