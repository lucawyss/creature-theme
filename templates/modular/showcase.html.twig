{% set showcase_image = page.media.images|first.grayscale().contrast(40).brightness(-110).colorize(-35,81,122) %}
{% if showcase_image %}
	<div class="modular-row showcase flush-top" style="background-image: url({{ showcase_image.url }});">
{% else %}
<div class="modular-row showcase">
{% endif %}
	<section class="quotesAnimation letters type">
		<div class="quotes-wrapper waiting">
			{{ content }}
		</div>
	</section>

    {% for button in page.header.buttons %}
        <a class="button{% if button.primary %} primary{% endif %}" href="{{ button.url }}">{{ button.text }}</a>
    {% endfor %}

</div>
