{% set showcase_image = page.media.images|first.grayscale().contrast(40).brightness(-20).colorize(100,-100,-20) %}


	    <div class="parallax">
	    	<img src="{{ showcase_image.url }}">
	    </div>
	    <div class="row container white-text">
					<h2 class="center-align">{{ page.title }}</h2>
					<h3 class="center-align">{{ page.content }}</h3>
				
				{% if page.header.buttons %}
					<div class="center-align">
					{% for button in page.header.buttons %}
						{% if button.url %}
							{% set link = button.url %}
						{% else %}
							{% set link = button.pagelink %}
						{% endif %}
						<a class="waves-effect waves-light btn-large btn-flat white-text" href="{{ link }}">
							<i class="material-icons{% if button.side %} left{% else %} right{% endif %}">{{ button.icon }}</i>
							{{ button.text }}
						</a>
					{% endfor %}
					</div>
				{% endif %}
				
	    </div>
