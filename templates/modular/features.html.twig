<div class="modular-row features {{ page.header.class}}">
    {{ content }}
    <div class="feature-items">
    {% for feature in page.header.features %}
           <div class="feature">
            {% if feature.image %}
                {% set logo = page.media[feature.image].grayscale() %}
                <img src="{{ logo.url }}"> 
            {% endif %}
            <div class="feature-content">
            {% if feature.header %}
            <h4>{{ feature.header }}</h4>
            {% endif %}
            {% if feature.url %}
            <p>{{ feature.url }}</p>
            {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</div>
